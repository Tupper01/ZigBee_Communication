  if(Quality == 1){
    SoftSerial.write(ColorGreen, sizeof(ColorGreen));
  }
  else if(Quality == 0){
    SoftSerial.write(ColorRed, sizeof(ColorRed));  
  }
  else{
    SoftSerial.write(ColorYellow, sizeof(ColorYellow));
  }
  return 0;
}

